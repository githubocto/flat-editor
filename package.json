{
  "name": "flat-editor",
  "displayName": "Flat Editor",
  "description": "An editor for flat-data configurations",
  "version": "0.0.1",
  "publisher": "GitHubOCTO",
  "repository": "https://github.com/githubocto/flat-editor",
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.helloWorld",
    "onCommand:extension.showPreview",
    "onCustomEditor:flat.config"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "flat.config",
        "displayName": "Flat Config",
        "selector": [
          {
            "filenamePattern": "*.yml"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "extension.showPreview",
        "title": "Show Preview, Please!!!",
        "category": "Flat Editor",
        "icon": "$(go-to-file)"
      },
      {
        "command": "extension.showRaw",
        "title": "Show Raw, Please!!!",
        "category": "Flat Editor",
        "icon": "$(go-to-file)"
      },
      {
        "command": "extension.showPreviewToSide",
        "title": "Show preview to the side",
        "category": "Flat Editor",
        "icon": "$(go-to-file)"
      },
      {
        "command": "extension.showRawToSide",
        "title": "Show raw to the side",
        "category": "Flat Editor",
        "icon": "$(go-to-file)"
      },
      {
        "command": "extension.helloWorld",
        "title": "Hello World"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "extension.showPreview",
          "alt": "extension.showPreviewToSide",
          "group": "navigation",
          "when": "resourceFilename == 'flat.yml' && editorLangId == yaml && activeEditor == workbench.editors.files.textFileEditor"
        },
        {
          "command": "extension.showRaw",
          "alt": "extension.showRawToSide",
          "group": "navigation",
          "when": "activeEditor == WebviewEditor"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "tsc -watch -p ./",
    "format": "prettier --write **/*.ts",
    "dev": "nodemon --watch src/webviews/ -e 'ts,tsx,css' --exec snowpack build",
    "build": "TAILWIND_MODE='build' snowpack build"
  },
  "devDependencies": {
    "@snowpack/plugin-dotenv": "^2.0.5",
    "@snowpack/plugin-postcss": "^1.2.1",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@tailwindcss/forms": "^0.2.1",
    "@tailwindcss/jit": "^0.1.8",
    "@types/node": "^12.12.0",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/snowpack-env": "^2.3.3",
    "@types/tailwindcss": "^2.0.2",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^4.16.0",
    "@typescript-eslint/parser": "^4.16.0",
    "autoprefixer": "^10.2.5",
    "eslint": "^7.21.0",
    "nodemon": "^2.0.7",
    "postcss": "^8.2.8",
    "postcss-nested": "^5.0.5",
    "prettier": "^2.2.1",
    "snowpack": "^3.1.0",
    "tailwindcss": "^2.0.4",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "classcat": "^5.0.3",
    "cronstrue": "^1.110.0",
    "formik": "^2.2.6",
    "immer": "^9.0.1",
    "nanoid": "^3.1.22",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "reakit": "^1.3.6",
    "tweetsodium": "^0.0.5",
    "vscode-codicons": "^0.0.15",
    "yaml": "^2.0.0-4",
    "yup": "^0.32.9",
    "zod": "^3.0.0-alpha.33",
    "zustand": "^3.3.3"
  }
}
